    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" /> 
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500&&family=Noticia+Text&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="{{asset "built/screen.css"}}" />
    <title>{{meta_title}}</title>
    {{ghost_head}}{{!-- outputs important meta and settings, should always be in <head> --}}   
</head>
<body class="{{body_class}} overflow-x-hidden dark:bg-black/90 transition-colors duration-400">
