<header class="desktop:container desktop:mx-auto desktop:pt-1 desktop:px-10">
    <div class="flex flex-wrap border-b-[1px] border-b-black/10 dark:border-b-white/30">
        <div class="flex w-1/5 desktop:w-1/3 tablet:pl-1 desktop:p-0 space-x-1
          [&>button]:text-[#010000] [&>button]:dark:text-white/30 [&>button]:tablet:rounded
          [&>button>svg]:w-6 [&>button>svg]:h-6
          desktop:[&>button>svg]:w-4 desktop:[&>button>svg]:h-4
          xl:[&>button>svg]:w-5 xl:[&>button>svg]:h-5
          2xl:[&>button>svg]:w-6 2xl:[&>button>svg]:h-6
          3xl:[&>button>svg]:w-7 3xl:[&>button>svg]:h-7
          items-center">
            <button id="menu-toggle" type="button" class="hover:bg-black/5 dark:hover:bg-white/5 p-2 transition-colors duration-300">
                {{> "icons/hamburger"}}

            </button>{{!-- That odd empty space is intentional as a hack for proper indention. To-Do: Fix this --}}
            <button id="search-modal-button" type="button" onclick="window.location.href='#/search';" class="hidden tablet:inline hover:bg-black/5 dark:hover:bg-white/5 p-2 transition-colors duration-300">
                {{> "icons/search"}}

            </button>{{!-- That odd empty space is intentional as a hack for proper indention. To-Do: Fix this --}}
        </div>
        {{!-- Header Space Above Logo --}}
        <div class="hidden desktop:flex w-1/3 text-center"></div>
        {{!-- Socials, visible only >=desktop --}}
        <div class="hidden desktop:flex w-1/3
          items-center justify-end
          [&>a]:flex [&>a]:p-2
          [&>a>svg]:inline
          [&>a>svg]:w-3 [&>a>svg]:h-3
          xl:[&>a>svg]:w-4 xl:[&>a>svg]:h-4
          2xl:[&>a>svg]:w-5 2xl:[&>a>svg]:h-5
          3xl:[&>a>svg]:w-6 3xl:[&>a>svg]:h-6
          [&>a>svg]:fill-black/25 [&>a>svg]:dark:fill-white/75">{{> socials }}
        </div>
        {{!-- Left Space --}}
        <div class="hidden desktop:flex w-1/5 items-center">
            <a href="#/portal/subscribe">Subscribe</a>
        </div>
        {{!-- Logo --}}
        <div class="w-3/5 text-center">
            <h1 class="inline-block font-logo tracking-tight select-none text-[#010000] dark:text-white/95 text-[1.6rem] mobile:text-[1.75rem] tablet:text-[2.25rem] desktop:text-[4rem] xl:text-[5rem] 2xl:text-[6rem] leading-relaxed tablet:leading-snug desktop:leading-tight"><a href="{{@site.url}}">{{@site.title}}</a></h1>
        </div>
        <div class="flex w-1/5 text-right desktop:p-0 items-center justify-end">
            <button id="theme-toggle" type="button" class="hover:bg-black/5 dark:hover:bg-white/5 [&>svg]:fill-black/75 [&>svg]:dark:fill-white/75 tablet:rounded text-sm p-2.5 transition-colors duration-300 justify-self-end">
